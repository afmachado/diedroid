<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content" android:orientation="vertical">




<Spinner android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/statsMethodSpin" android:focusable="true" android:layout_gravity="center_horizontal" android:entries="@array/statsRollMethods" android:nextFocusDown="@+id/statsRollButton" android:nextFocusRight="@id/statsRollButton"></Spinner><Button android:layout_height="wrap_content" android:textSize="14pt" android:layout_width="fill_parent" android:fitsSystemWindows="true" android:text="@string/RollButtonText" android:id="@id/statsRollButton" android:nextFocusLeft="@id/statsMethodSpin" android:nextFocusUp="@id/statsMethodSpin"></Button><View android:layout_width="wrap_content" android:layout_height="5sp" android:id="@+id/statsHLine" android:background="#ababab"></View><TextView android:layout_height="wrap_content" android:textSize="14pt" android:layout_width="fill_parent" android:id="@+id/statsResultsTitle" android:text="@string/statsResultTitle"></TextView><GridView android:layout_width="wrap_content" android:layout_height="wrap_content" android:focusable="false" android:focusableInTouchMode="false" android:isScrollContainer="true" android:smoothScrollbar="true" android:verticalSpacing="5sp" android:gravity="center" android:fitsSystemWindows="true" android:id="@+id/statsResultsGrid" android:numColumns="3"></GridView>



